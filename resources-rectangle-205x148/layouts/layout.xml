			<palette disableTransparency="true">
				<color>000000</color>
				<color>F58220</color>
			</palette>
		</bitmap>	
		<bitmap id="StatusHRIconWhite" x="5" y="3" filename="../drawables/hr_white_16.png" dithering="none">
