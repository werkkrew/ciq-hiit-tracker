				<color>FFFFFF</color>
			</palette>
		</bitmap>
		
		<bitmap id="StatusHRIconRed" x="-50" y="3" filename="../drawables/hr_red_16.png" dithering="none">
			<palette>
				<color>FF1D1D</color>
